{
  "compilerOptions": {
    "lib": [
      "es2020",
      "DOM",
      "DOM.Iterable"
    ],
    "declarationDir": "types",
    "declaration": true,
    "target": "es6",
    "moduleResolution": "node",
    "module": "esnext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true
  },
  "typeAcquisition": {
    "include": [
      "chrome"
    ]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}